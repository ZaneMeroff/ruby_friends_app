<p id="notice"><%= notice %></p>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th class="w-200">First name</th>
      <th class="w-200">Last name</th>
      <th class="w-200">Email</th>
      <th class="w-200">Phone</th>
      <th class="w-200">Twitter</th>
      <th class="w-200"></th>
    </tr>
  </thead>

  <tbody class="table-striped">
    <% @friends.each do |friend| %>
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <td class="w-200"><%= friend.first_name %></td>
        <td class="w-200"><%= friend.last_name %></td>
        <td class="w-200"><%= friend.email %></td>
        <td class="w-200"><%= friend.phone %></td>
        <td class="w-200"><%= friend.twitter %></td>
        <td class="w-200"><%= link_to 'Show', friend %><%= link_to 'Edit', edit_friend_path(friend) %><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </table>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path %>

<style>

  .w-200 {
    width: 230px;
  }

</style>
